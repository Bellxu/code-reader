<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/larger_padding"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@android:id/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/larger_padding"
            android:text="@string/app_name"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/text_about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@android:id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/large_padding"
            android:text="V1.0.1"
            android:textColor="@color/text_color_tertiary"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/text_about_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_about_version"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/larger_padding"
            android:gravity="center"
            android:textColor="@color/text_color_tertiary"
            android:textSize="@dimen/text_size_small"
            tools:text="CoReader in Github\nContact: yytodou123@gmail.com\nWe will thanks for your help to send email to us or add issue in Github" />

        <TextView
            android:id="@+id/text_about_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Copyright © 2016 Loopeer All Rights Reserved"
            android:textSize="@dimen/text_size_xxsmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_about_right"
            android:layout_centerHorizontal="true"
            android:text="北京绿葡科技有限公司"
            android:textSize="@dimen/text_size_xxsmall" />


    </RelativeLayout>
</layout>